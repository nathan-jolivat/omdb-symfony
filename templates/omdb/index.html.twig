{% extends 'omdb/layout/base.html.twig' %}

{% block title %}OMDB API Training{% endblock %}

{% block content %}
    {% include('omdb/layout/navbar.html.twig') %}
    <div class="container" style="margin-top: 30px">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">
                    <i class="mdi mdi-home"></i> Accueil - Rechercher un film</li>
            </ol>
        </nav>
        <form action="{{ path('find') }}" method="get">
            <div class="row">
                <div class="col-md-9">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="mdi mdi-movie"></i> Nom du film</span>
                        </div>
                        <input type="text" class="form-control" name="movieTitle" placeholder="Saisir nom du film à rechercher">
                    </div>
                </div>
                <div class="col-md-3">
                    <button class="btn btn-primary" type="submit"><i class="mdi mdi-target"></i> Récupérer informations</button>
                </div>
            </div>
        </form>
        {% if responseMovie is defined %}
            {% if responseMovie.Title is defined %}
                <div class="jumbotron">
                    <div class="row">
                        <div class="col-md-4">
                            {% if responseMovie.Poster is defined %}
                                <img class="card-img-top" src="{{ responseMovie.Poster }}" alt="Poster du film">
                            {% else %}
                                <h5>Pas d'image disponible</h5>
                            {% endif %}
                        </div>
                        <div class="col-md-8">
                            <h1 class="display-4">{{ responseMovie.Title }} - <i>{{ responseMovie.Year }}</i></h1>
                            <span>Date de sortie <i class="mdi mdi-arrow-right"></i> {{ responseMovie.Released }}</span>
                            <p class="lead">Avec <i>{{ responseMovie.Actors }}</i></p>
                            <hr class="my-4">
                            <h4><i class="mdi mdi-text-subject"></i> Synopsis</h4>
                            <p>
                                <i>{{ responseMovie.Plot }}</i>

                                {% if responseMovie.Website is defined %}
                                    <br><br><a href="{{ responseMovie.Website }}">
                                        {{ responseMovie.Website }}
                                    </a>
                                {% endif %}
                            </p>
                            <p class="lead">
                                <span class="badge badge-primary">{{ responseMovie.Genre }}</span>
                            </p>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <i class="mdi mdi-cloud-alert"></i><strong> Une erreur est survenue</strong> <i class="mdi mdi-arrow-right"></i> Aucun film de ce nom là n'existe m'sieur.
                </div>
            {% endif %}
        {% endif %}
    </div>
{% endblock %}