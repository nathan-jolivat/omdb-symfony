{% extends 'omdb/layout/base.html.twig' %}

{% block title %}OMDB API Training{% endblock %}

{% block content %}
    {% include('omdb/layout/navbar.html.twig') %}
    <div class="container" style="margin-top: 30px">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">Accueil</li>
            </ol>
        </nav>
        <form action="{{ path('find') }}" method="get">
            <div class="row">
                <div class="col-md-8">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Nom du film</span>
                        </div>
                        <input type="text" class="form-control" name="movieTitle" placeholder="Saisir nom du film à rechercher">
                    </div>
                </div>
                <div class="col-md-4">
                    <button class="btn btn-primary" type="submit">Récupérer informations</button>
                </div>
            </div>
        </form>
        {% if responseMovie is defined %}
            {{ dump(responseMovie) }}
        {% endif %}
    </div>
{% endblock %}