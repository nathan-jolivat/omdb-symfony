<div class="modal fade" id="shareModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Partager la fiche du film</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="{{ path('prepare-to-send-mail') }}" method="post">
                    <input type="hidden" name="movieTitle" value="{{ responseMovie.Title }}">
                    <input type="hidden" name="moviePoster" value="{{ responseMovie.Poster }}">
                    <input type="hidden" name="movieYear" value="{{ responseMovie.Year }}">
                    <input type="hidden" name="movieReleased" value="{{ responseMovie.Released }}">
                    <input type="hidden" name="movieActors" value="{{ responseMovie.Actors }}">
                    <input type="hidden" name="moviePlot" value="{{ responseMovie.Plot }}">
                    <input type="hidden" name="movieWebsite" value="{{ responseMovie.Website }}">
                    <input type="hidden" name="movieGenre" value="{{ responseMovie.Genre }}">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Envoyer à
                                    <input type="email" class="form-control input-lg" placeholder="Adresse mail" name="emailRecipient" required>
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Prénom du destinataire
                                    <input type="text" class="form-control" placeholder="Prénom du Destinataire" name="nameRecipient" required>
                                </label>
                            </div>
                        </div>
                    </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary"><i class="mdi mdi-send"></i> Envoyer</button>
            </div>
            </form>
        </div>
    </div>
</div>